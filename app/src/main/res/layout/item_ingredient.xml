<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/iv_ingredient_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_restaurant_menu" />

            <!-- Note: using ic_restaurant_menu/tint as placeholder since I don't have ingredient drawables yet.
                 In real app, src would be set dynamically and no tint for color images. -->

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_ingredient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:text="Ingredient Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
