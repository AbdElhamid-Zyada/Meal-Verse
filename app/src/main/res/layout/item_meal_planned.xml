<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_meal_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            app:strokeWidth="0dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_meal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal Name"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_meal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="15 mins â€¢ 350 kcal"
                android:textColor="#00D261"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_delete_meal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete" 
            app:tint="#F44336" 
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete" /> 
            <!-- Note: Using ic_favorite as placeholder for delete/trash icon if specific trash icon doesn't exist. 
                 Ideally should be a trash can. Let me check if I have a delete icon.
                 I saw ic_favorite_border.xml before. I'll use that temporarily or a standard system resource if available,
                 but better to use tint on a generic icon if valid. 
                 The prompt image shows a trash bin. I'll check my icons list again. -->
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
