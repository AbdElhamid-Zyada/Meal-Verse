<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.mealplanner.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mealplanner.ui.login.view.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_guestFragment"
            app:destination="@id/guestFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.mealplanner.ui.signup.view.SignupFragment"
        android:label="SignupFragment"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/guestFragment"
        android:name="com.example.mealplanner.ui.guest.GuestFragment"
        android:label="GuestFragment"
        tools:layout="@layout/fragment_guest">
        <action
            android:id="@+id/action_guestFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mealplanner.ui.home.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_countriesFragment"
            app:destination="@id/countriesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_ingredientsFragment"
            app:destination="@id/ingredientsFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.mealplanner.ui.search.view.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.mealplanner.ui.meal_details.view.MealDetailsFragment"
        android:label="MealDetailsFragment"
        tools:layout="@layout/fragment_meal_details" />

    <fragment
        android:id="@+id/countriesFragment"
        android:name="com.example.mealplanner.ui.countries.view.CountriesFragment"
        android:label="CountriesFragment"
        tools:layout="@layout/fragment_countries" />

    <fragment
        android:id="@+id/ingredientsFragment"
        android:name="com.example.mealplanner.ui.ingredients.view.IngredientsFragment"
        android:label="IngredientsFragment"
        tools:layout="@layout/fragment_ingredients" />

    <fragment
        android:id="@+id/plannerFragment"
        android:name="com.example.mealplanner.ui.planner.view.PlannerFragment"
        android:label="PlannerFragment"
        tools:layout="@layout/fragment_planner" />

    <fragment
        android:id="@+id/savedMealsFragment"
        android:name="com.example.mealplanner.ui.saved.view.SavedMealsFragment"
        android:label="SavedMealsFragment"
        tools:layout="@layout/fragment_saved_meals" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mealplanner.ui.profile.view.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

</navigation>
